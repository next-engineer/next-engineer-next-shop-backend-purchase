{
  "family": "purchase-api-task",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "512",
  "memory": "1024",
  "executionRoleArn": "arn:aws:iam::077672914621:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::077672914621:role/ecsAppTaskRole",
  "containerDefinitions": [
    {
      "name": "purchase",
      "image": "077672914621.dkr.ecr.ap-northeast-2.amazonaws.com/shop-repo:latest",
      "essential": true,
      "portMappings": [{ "containerPort": 8082, "protocol": "tcp" }],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/purchase-api",
          "awslogs-region": "ap-northeast-2",
          "awslogs-stream-prefix": "ecs"
        }
      }
    }
  ]
}
